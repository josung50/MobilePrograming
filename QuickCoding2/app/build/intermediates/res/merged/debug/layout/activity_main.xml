<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What is Your number?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/inputNumber"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:hint="Input Number" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Send"
        android:id="@+id/SendButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Result"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/SendButton" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Bigger"
        android:id="@+id/BiggerButton"
        android:layout_below="@+id/Result"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:onClick="onClick" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Smaller"
        android:id="@+id/SmallerButton"
        android:layout_alignBottom="@+id/BiggerButton"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Bingo"
        android:id="@+id/BingoButton"
        android:layout_below="@+id/BiggerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_above="@+id/SmallerButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/SmallerButton"
        android:layout_below="@+id/Result" />
</RelativeLayout>
